<div class="container">
    
    <div class="row">
        <% if flash[:notice] %>
            <%= flash[:notice] %>
        <% end %>
        
        <div class="col-lg-2"> 
            <h2>User info</h2>
              <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
            <table class="table">
                <tr>
                <td>name</td>
                <td><%= @user.name %></td>
                </tr>
                <tr>
                <td>introduction</td>
                <td><%= @user.introduction %></td>
                </tr>
                <td>
            </table>
            <%=link_to "",edit_user_path(current_user.id),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
            <h2>New Book</h2>
            <%= form_for(@book) do |f| %>
                <h4>Title</h4>
                <%= f.text_field :title %>
                <h4>Opinion</h4>
                <%=f.text_area :body %><br>
                <%=f.submit 'CreateBook',class:"btn btn-primary" %>
            <% end %>   
        </div>
        <div class="col-lg-10"> 
            <h2>Books</h2>
            <table class="table">
                <thead>
                <tr>
                <th>image</th>
                <th>name</th>
                <th></th>
                </tr>
                </thead>
                <tbody>
                    <% @users.each do |user|%>
                        <tr>
                        <td><%=attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", style:"width:40px;height:40px;"%></td>
                        <td><%=user.name%></td>
                        <td><%= link_to "Show",user_path(user) %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div> 
</div>