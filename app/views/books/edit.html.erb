<div class="container">
    <% if flash[:notice] %>
        <%= flash[:notice] %>
    <% end %>
    <% if @book.errors.any? %>
        <%= @book.errors.count %>error
        <% @book.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>
    <div class="row">
        <div class="col-md-6 col-md-offset-3"> 
            <h2>Editing book</h2>
            <%=form_for(@book) do |f| %>
                <h4>Title</h4>
                <%= f.text_field :title,class:"col-xs-12" %>
                <h4>Body</h4>
                <%=f.text_area :body ,class:"col-xs-12"%><br>
                <%=f.submit 'UpdateBook',class:"col-xs-12 btn btn-primary" %>
            <% end %>
            
        </div>
    </div> 
</div>